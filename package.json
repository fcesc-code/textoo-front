{
  "name": "textoo",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:ci": "npm-run-all ci build",
    "watch": "ng build --watch --configuration development",
    "lint": "ng lint",
    "lint:ci": "ng lint --fix",
    "test": "ng test",
    "test:coverage": "ng test --no-watch --code-coverage",
    "test:debug": "ng test --code-coverage",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless",
    "dev": "npm run serve:dev",
    "pwa": "npm run serve:pwa",
    "serve:dev": "ng serve --proxy-config proxy.conf.json --configuration development -o ",
    "serve:pwa": "npx http-server dist/textoo/ -p 0 -o",
    "report:pwa": "npm-run-all clean:report report:gen-pwa-ci",
    "report:dev": "npm-run-all clean:report report:gen-dev-browser",
    "report:gen-pwa-ci": "npx lighthouse https://127.0.0.1:8080/ --output-path=./reports/index.html --view --chrome-flags=--headless",
    "report:gen-dev-browser": "npx lighthouse http://localhost:4200/ --output-path=./reports/index.html --view",
    "clean:build": "rimraf dist/",
    "clean:report": "rimraf reports/index.html",
    "clean:cache": "rimraf .angular/cache/",
    "clean:ci": "rimraf dist/",
    "prepare": "husky install",
    "clean": "npm-run-all clean:build clean:report clean:cache",
    "ci": "npm-run-all lint:ci test:ci clean:ci",
    "deploy": "npm-run-all build:ci deploy:firebase",
    "deploy:firebase": "firebase deploy",
    "analyze:build": "ng build --stats-json && webpack-bundle-analyzer ./dist/textoo/stats.json",
    "analyze:current": "webpack-bundle-analyzer ./dist/textoo/stats.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.2.0",
    "@angular/common": "~13.2.0",
    "@angular/compiler": "~15.2.8",
    "@angular/core": "~13.2.0",
    "@angular/fire": "^7.5.0",
    "@angular/forms": "~13.2.0",
    "@angular/material": "^13.3.4",
    "@angular/platform-browser": "~13.2.0",
    "@angular/platform-browser-dynamic": "~13.2.0",
    "@angular/router": "~13.2.0",
    "@angular/service-worker": "~13.2.0",
    "@ngrx/effects": "^13.1.0",
    "@ngrx/store": "^13.2.0",
    "dompurify": "^3.0.3",
    "firebase": "^9.4.0",
    "ngx-quill": "^17.0.0",
    "quill": "^1.3.7",
    "rxfire": "^6.0.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.5.0",
    "zone.js": "~0.11.8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.3.11",
    "@angular-eslint/builder": "^13.1.0",
    "@angular-eslint/eslint-plugin": "^13.1.0",
    "@angular-eslint/eslint-plugin-template": "^16.0.1",
    "@angular-eslint/schematics": "^13.1.0",
    "@angular-eslint/template-parser": "^13.1.0",
    "@angular/cli": "~13.2.0",
    "@angular/compiler-cli": "~13.2.0",
    "@ngrx/store-devtools": "^13.1.0",
    "@types/dompurify": "^3.0.2",
    "@types/jasmine": "~3.10.0",
    "@types/node": "^12.11.1",
    "@types/quill": "^1.3.10",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.13.0",
    "autoprefixer": "^10.4.2",
    "eslint": "^8.10.0",
    "eslint-plugin-tailwindcss": "^3.5.0",
    "firebase": "^9.6.8",
    "http-server": "^14.1.0",
    "husky": "^8.0.3",
    "jasmine-core": "~4.0.0",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "lighthouse": "^9.4.0",
    "mark.js": "^8.11.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.23",
    "rimraf": "^5.0.0",
    "tailwindcss": "^3.3.2",
    "ts-auto-mock": "^3.6.2",
    "typescript": "~4.5.2",
    "webpack-bundle-analyzer": "^4.5.0"
  },
  "engines": {
    "node": "16.13.2",
    "npm": "8.12.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fcesc-code/textoo-front.git"
  },
  "author": {
    "name": "Francesc Brugarolas",
